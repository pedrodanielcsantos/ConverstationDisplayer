<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CDSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_close_white</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/ic_search_white</item>
    </style>

    <style name="CDMessageListBarTheme" parent="">
        <!--Search input text color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--Hint search icon color-->
        <item name="colorControlNormal">@color/white</item>
        <!--Ripple clicks color-->
        <item name="colorControlHighlight">@color/white</item>
        <!--Text cursor color-->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
